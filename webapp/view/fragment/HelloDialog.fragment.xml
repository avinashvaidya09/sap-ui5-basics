<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog id="helloDialog" title="{i18n>helloDialogTitle}" titleAlignment="Center">
        <content>
            <Text id="helloDialogText" text="{i18n>helloDialogText}" class="sapUiTinyMargin"/>
        </content>
        <buttons>
            <Button id="helloDialogCloseButton" text="{i18n>closeButtonText}" press="onCloseDialog" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>