<mvc:View controllerName="com.learn.ui5.sapui5basics.controller.OrdersPanel"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
            <Panel id="ordersPanel" headerText="{i18n>ordersPanelTitle}" class="sapUiResponsiveMargin" width="auto">
                <content>
                    <List id="ordersList" 
                        headerText="{i18n>ordersListTitle}"
                        class="saUiResponsiveMargin"
                        width="auto"
                        items="{
                            path: 'salesOrder>/SalesOrders',
                            sorter: {
                                path: 'OrderNumber'
                            }
                        }">
                        <headerToolbar>
                            <Toolbar id="ordersToolBar">
                                <Title id="ordersToolBarTitle" text="{i18n>ordersListTitle}"/>
                                <ToolbarSpacer id="ordersToolBarSpacer"/>
                                <SearchField id="ordersSearchField" width="50%" search=".onFilterSalesOrders" ></SearchField>
                            </Toolbar>
                        </headerToolbar>
                        <items>
                            <ObjectListItem id="ordersListItem" 
                                title="{salesOrder>OrderNumber}"
                                numberUnit="{view>/currency}"
                                number="{
                                    parts: [{path: 'salesOrder>TotalPrice'}, {path: 'view>/currency'}],
                                    type: 'sap.ui.model.type.Currency',
                                    formatOptions: {
                                        showMeasure: false
                                    }
                                }"
                                numberState="{= ${salesOrder>TotalPrice} > 1000 ? 'Error' : 'Success'}"
                                class="customObjectListItem">
                                <firstStatus>
                                    <ObjectStatus id="orderObjectStatus" 
                                    text="{ path: 'salesOrder>Status', formatter: '.formatter.translateStatusText' }"
                                    title="STATUS"/>
                                </firstStatus>
                            </ObjectListItem>                        
                        </items>
                    </List>
                </content>
            </Panel>
</mvc:View>
