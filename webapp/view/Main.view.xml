<mvc:View controllerName="com.learn.ui5.sapui5basics.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    
    <Page id="page" title="{i18n>title}" titleAlignment="Center">
        <content>
           <mvc:XMLView id="helloPanelView" viewName="com.learn.ui5.sapui5basics.view.HelloPanel"/>
        </content>
        <content>
            <Panel id="reuseDialogPanelView" headerText="{i18n>reusableComponentPanel}" class="sapUiResponsiveMargin" width="auto">
                <Button id="mainViewReuseDialogButton" class="sapUiSmallMarginEnd" text="{i18n>reuseDialogButton}" press="onOpenDialog" icon="sap-icon://world"></Button>
            </Panel>
        </content>
        <content>
            <mvc:XMLView id="ordersPanelView" viewName="com.learn.ui5.sapui5basics.view.OrdersPanel"/>
        </content>
        <content>
            <mvc:XMLView id="bpPanelView" viewName="com.learn.ui5.sapui5basics.view.BPPanel"/>
        </content>
    </Page>

</mvc:View>
